FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform $pressure;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type            zeroGradient;
    }

    outlet
    {
        type            fixedValue;
        value           $internalField;
    }

    lowerWall
    {
        type            zeroGradient;
    }

    // -<-<-<-<-<-<-<-< Patches created from createPatchDict >->->->->->->->->-

    innerBack
    {
        type            zeroGradient;
    }

    innerUpper
    {
        type            zeroGradient;
    }

    innerFront
    {
        type            zeroGradient;
    }

    // -<-<-<-<-<-<-<-< Patches created from createPatchDict >->->->->->->->->-


    train
    {
        type            zeroGradient;
    }

    #include "include/frontBackUpperPatches"

    // In case the angluationFlag is set to TRUE, the following patches are redefined
    #ifeq $angulationFlag true
        #if #eval {$angulationAngle > 0}
            backWall
            {
                type            zeroGradient;
            }
        #else
            backWall
            {
                type            fixedValue;
                value           $internalField;
            }
        #endif

        #if #eval {$angulationAngle < 0}
            frontWall
            {
                type            zeroGradient;
            }
        #else
            frontWall
            {
                type            fixedValue;
                value           $internalField;
            }
        #endif
    #endif

}


// ************************************************************************* //
